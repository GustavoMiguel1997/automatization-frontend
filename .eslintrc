{
  "env": {
    "es2021": true,
    "browser": true,
    "node": true
  },
  "extends": ["plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "semi": "warn",
    "no-var": "warn",
    "no-const-assign": "error",
    "prefer-const": "warn",
    "complexity": "warn",
    "eqeqeq": "warn",
    "require-await": "warn"
  }
}
